<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fondo"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.victor.game1jvbc.main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_puntuacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@color/colorBlanco"
            android:textSize="14sp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/lyVidas"
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </LinearLayout>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txt_comenzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Â¡Toque para Comenzar!"
            android:textColor="@color/colorBlanco"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/img_personaje"
            android:layout_width="58dp"
            android:scaleType="fitXY"
            android:src="@drawable/personaje2"
            android:layout_gravity="center_vertical"
            android:layout_height="45dp"
            android:contentDescription="TODO" />
        <ImageView
            android:id="@+id/img_vida"
            android:layout_width="40dp"
            android:src="@drawable/hearts"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/imgSemilla"
            android:layout_width="40dp"
            android:src="@drawable/semilla"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/img_ongo_naranja"
            android:layout_width="40dp"
            android:src="@drawable/gusano"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/img_boma"
            android:layout_width="40dp"
            android:src="@drawable/bomba"
            android:layout_height="40dp" />
        <ImageView
            android:id="@+id/img_misil"
            android:layout_width="50dp"
            android:src="@drawable/misil"
            android:layout_height="50dp" />
    </FrameLayout>

</LinearLayout>